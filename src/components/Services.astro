---
import { services as data } from "../data/services";
---

<section
  id="servicios"
  class="bg-lime-500 pt-6 pb-6 md:pt-12 md:pb-12"
>
  <div class="text-center mb-6 md:mb-12 px-4">
    <h3 class="text-white text-3xl sm:text-4xl md:text-6xl font-semibold">
      Nuestros
      <span class="font-light text-[#223983]"> Servicios</span>
    </h3>
  </div>
</section>
<article class="overflow-hidden">
  <div class="flex animate-scroll"></div>
</article>

<section class="bg-gray-100">
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 py-10 px-4 md:px-0 w-full max-w-[1400px] mx-auto"
  >
    {
      data.primary.map((item) => (
        <div class="flex flex-col items-center">
          <img
            class="rounded-lg md:rounded-full w-full max-w-xs h-48 md:w-64 md:h-64 object-cover mb-4"
            id="serviceImage"
            src={`/images/services/service-${item.id}.jpg`}
            alt={item.title}
          />
          <h2 class="text-yellow-500 font-bold py-2 text-center text-xl">
            {item.title}
          </h2>
          <p class="text-center text-gray-800 max-w-xs">{item.description}</p>
        </div>
      ))
    }
  </div>
</section>
<section class="bg-gray-200">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 py-10 px-4 md:px-0 max-w-[1400px] mx-auto">
    {
      data.secondary.map((item) => (
        <div class="flex flex-col items-center">
          <img
            class="rounded-lg md:rounded-full w-full max-w-xs h-40 md:w-40 md:h-40 object-cover mb-4"
            id="serviceImage"
            src={`/images/services/service-${item.id}.jpg`}
            alt={item.title}
          />
          <h2 class="text-lime-500 font-bold py-2 text-center text-xl">
            {item.title}
          </h2>
          <p class="text-center text-gray-800 max-w-xs">{item.description}</p>
        </div>
      ))
    }
  </div>
</section>
<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-400px * 5 - 0.5rem * 10));
    }
  }
  .animate-scroll {
    animation: scroll 30s linear infinite;
  }
  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>
