---
import { services as data } from "../data/services";
---

<section id="servicios" class="pt-12 bg-lime-500">
  <div class="text-center mb-12">
    <h3 class="text-white text-6xl font-semibold text-center py-4">
      Nuestros <span class="font-light text-[#223983]">Servicios</span>
    </h3>
  </div>
  <article class="overflow-hidden">
    <div class="flex animate-scroll">

    </div>
  </article>
</section>
<section class="bg-white">
  <div class="container mx-auto grid grid-cols-3 gap-8 py-8">
    {
      data.primary.map((item) => (
        <div class="flex flex-col items-center">
          <img
            class="rounded-full size-64 object-cover mb-4"
            id="serviceImage"
            src={`/images/services/service-${item.id}.jpg`}
            alt={item.id}
          />
          <h2 class="text-yellow-500 font-bold py-2 text-center text-xl">
            {item.title}
          </h2>
          <p class="text-center text-gray-800">{item.description}</p>
        </div>
      ))
    }
  </div>
</section>
<section class="bg-gray-50">
  <div class="container mx-auto flex flex-wrap gap-8 py-8 justify-center">
    {
      data.secondary.map((item) => (
        <div class="flex flex-col items-center w-96">
          <img
            class="rounded-full size-40 object-cover mb-4"
            id="serviceImage"
            src={`/images/services/service-${item.id}.jpg`}
            alt={item.id}
          />
          <h2 class="text-lime-500 font-bold py-2 text-center text-xl">
            {item.title}
          </h2>
          <p class="text-center text-gray-800">{item.description}</p>
        </div>
      ))
    }
  </div>
</section>
<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-400px * 5 - 0.5rem * 10));
    }
  }
  .animate-scroll {
    animation: scroll 30s linear infinite;
  }
  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>
