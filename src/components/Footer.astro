    border: 2px solid #e5e5e6;
    border-radius: 6px;
  }

  textarea {
    padding: 10px;
    font-size: 16px;
    width: 100%;
    background-color: inherit;
    border: 2px solid #e5e5e6;
    border-radius: 6px;
  }

  select {
    padding: 10px;
    font-size: 16px;
    width: 100%;
    background-color: inherit;
    border: 2px solid #e5e5e6;
    border-radius: 6px;
  }

  label {
    position: absolute;
    left: 10px;
    top: 10px;
    color: #666;
    transition: 0.2s;
    font-size: 16px;
    pointer-events: none;
  }

  input:focus + label,
  input:not(:placeholder-shown) + label {
    top: -10px;
    left: 10px;
    font-size: 12px;
    color: #333;
  }
</style>
