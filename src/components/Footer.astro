<section id="contactos">
  <div
    class="bg-[#00706A] flex flex-col md:flex-row justify-center gap-12 md:gap-24 lg:gap-32 pt-12 pb-8 px-12 sm:px-8 md:px-12"
  >
    <div class="max-w-[500px] text-white">
      <h2 class="text-3xl md:text-4xl uppercase font-semibold pb-8 text-white">
        Contáctanos
      </h2>
      <h3 class="text-xl md:text-2xl font-semibold text-white">
        Central Telefónica
      </h3>
      <li class="text-base md:text-xl text-white list-none">952053286</li>
      <h3 class="pt-4 text-xl md:text-2xl font-semibold text-white">
        Horario de atención
      </h3>
      <li class="text-base md:text-xl text-white list-none">
        Lunes - Domingos | 7:00 AM - 8:00 PM
      </li>
      <h3 class="pt-4 text-xl md:text-2xl font-semibold text-white">
        Nuestras sedes - Puno
      </h3>
      <li class="pt-2 text-base md:text-xl text-white list-none">
        Av. El Ejercito 1196 - Chejoña
      </li>
      <li class="pt-2 text-base md:text-xl text-white list-none">
        Av. La Torre 311 esq. Con Jr. Pardo
      </li>
      <li class="pt-2 text-base md:text-xl text-white list-none">
        Jr. Arequipa 1024 (Parque 7 esquinas)
      </li>
      <li class="pt-2 text-base md:text-xl text-white list-none">
        Jr. Rómulo Díaz Diandera 571 (Óvalo Huascar)
      </li>
      <li class="pt-2 text-base md:text-xl text-white list-none">
        Av. Laykakota 426 (Costado cementerio Laykakota)
      </li>
      <li class="pt-2 text-base md:text-xl text-white list-none">
        Jr. Leoncio Prado 894 esq. Jr. Arenales
      </li>
      <li class="pt-2 text-base md:text-xl text-white list-none">
        Jr. Deustua 1088 esq. Circunvalación
      </li>
    </div>
    <div
      class="bg-white text-[#58595B] px-6 py-6 w-full max-w-[450px] space-y-4 rounded-xl shadow-lg"
    >
      <h2 class="pb-4 font-bold text-lg text-center">
        Comunícate con nosotros
      </h2>

      <form id="whatsappForm" class="space-y-4">
        <input
          type="text"
          id="name"
          placeholder="Tu nombre completo"
          required
          class="w-full border rounded-md p-2"
        />

        <input
          type="tel"
          id="phone"
          placeholder="Número telefónico"
          required
          class="w-full border rounded-md p-2"
        />

        <input
          type="email"
          id="email"
          placeholder="Correo electrónico"
          class="w-full border rounded-md p-2"
        />

        <select id="service" required class="w-full border rounded-md p-2">
          <option value="" disabled selected>
            Selecciona un tipo de servicio
          </option>
          <option>Lavado en seco</option>
          <option>Lavado de vestido de novia</option>
          <option>Lavado de zapatillas</option>
          <option>Lavado de sobrecamas</option>
          <option>Otros</option>
        </select>

        <textarea
          id="details"
          rows="4"
          placeholder="Escribe los detalles de tu solicitud"
          class="w-full border rounded-md p-2"></textarea>

        <button
          type="submit"
          class="w-full bg-[#80C342] text-white font-semibold p-3 rounded-lg hover:bg-[#223983] transition duration-300"
        >
          Enviar por WhatsApp
        </button>
      </form>
      <script>
        const form = document.getElementById("whatsappForm");

if (form) {
  form.addEventListener("submit", (e) => {
    e.preventDefault();

    const name = (document.getElementById("name") as HTMLInputElement)?.value || "";
    const phone = (document.getElementById("phone") as HTMLInputElement)?.value || "";
    const email = (document.getElementById("email") as HTMLInputElement)?.value || "";
    const service = (document.getElementById("service") as HTMLSelectElement)?.value || "";
    const details = (document.getElementById("details") as HTMLTextAreaElement)?.value || "";

    const message = `
Nombre: ${name}
Teléfono: ${phone}
Correo: ${email}
Servicio: ${service}
Detalles: ${details}
    `;

    const url = `https://wa.me/51948445568?text=${encodeURIComponent(message)}`;
    window.open(url, "_blank");
  });
}
      </script>
    </div>
  </div>
</section>

